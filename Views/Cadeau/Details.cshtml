@model EasyGift.Models.Cadeau

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
            
<div>
    <h4>Cadeau</h4>
    <hr />
    <div class="row">
        <div>
                        
            <p><img src= "~/images/@Model.photo";   
                            classe = "cercle arrondi"   
                            hauteur= "40"  largeur= "40"   
                            asp-append-version= "true" />  
                </p>
                <br>
                <form enctype="multipart/form-data" asp-action="UploadImage" asp-controller="Cadeau">
                    <div class="form-group">
                        <input type="hidden" asp-for="Id" />
                        <input type="file" name="file" accept=".jpg, .png" />
                    </div>
                <input type="submit" />
            </form>
        </div>
    
        <div>    

            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.titre)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.titre)
            </dd>
            
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.marque)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.marque)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.prix)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.prix)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.lien)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.lien)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.commentaire)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.commentaire)
            </dd>
            
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.dejaAchete)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.dejaAchete)
            </dd>
        </div>
    </div>
    <div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
</div>


