@model EasyGift.Models.Cadeau

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Cadeau</h4>
<hr />
<div class="row">
    <div class="col-md-4">

        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="titre" class="control-label"></label>
                <input asp-for="titre" class="form-control" />
                <span asp-validation-for="titre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="commentaire" class="control-label"></label>
                <input asp-for="commentaire" class="form-control" />
                <span asp-validation-for="commentaire" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="marque" class="control-label"></label>
                <input asp-for="marque" class="form-control" />
                <span asp-validation-for="marque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="prix" class="control-label"></label>
                <input asp-for="prix" class="form-control" />
                <span asp-validation-for="prix" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lien" class="control-label"></label>
                <input asp-for="lien" class="form-control" />
                <span asp-validation-for="lien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="photo" type="hidden"/>
            </div>
            <div class="form-group">
                <label asp-for="dejaAchete" class="control-label"></label>
                <input asp-for="dejaAchete" class="form-control" />
                <span asp-validation-for="dejaAchete" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="listeId" class="control-label"></label>
                <select name="listeId">
                    
                    <option value=""> Aucune</option> 
                    @{
                        
                        List<EasyGift.Models.Liste> liste = ViewBag.Liste;
                        foreach(var l in liste){
                            @if(l.Id == ViewBag.idListe){
                                <option value="@l.Id" selected> @l.nomListe </option>
                            }
                            else{
                                <option value="@l.Id"> @l.nomListe </option>
                            }
                            
                        }
                    }
                
                </select>
                <span asp-validation-for="dejaAchete" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
